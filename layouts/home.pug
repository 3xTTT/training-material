extends base.pug

block content
  a( href="https://github.com/galaxyproject/training-material" )
    img( style="position: absolute; top: 0; right: 0; border: 0;" src="https://camo.githubusercontent.com/652c5b9acfaddf3a9c326fa6bde407b87f7be0f4/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f6f72616e67655f6666373630302e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_orange_ff7600.png")

  section

    h1 Tutorials:

    h2 Galaxy for Scientists

    table( class="table table-striped" )
        tr( class="row" )
              td( class="bold" class="col-md-10" ) Topic
              td( class="bold" class="col-md-2" ) Tutorials

        each topic in topics
            if topic.type == "use"
              tr( class="row" )
                  td( class="col-md-10") 
                      a( href= helpers._.toLower(topic.title) ) #{topic.title}
                  td( class="col-md-2" ) !{ topic.tutorials.length }

    h2 Galaxy for Developers and Admins

    table( class="table table-striped" )
        tr( class="row")
            td( class="bold" class="col-md-10" ) Topic
            td( class="bold" class="col-md-2" ) Tutorials

        each topic in topics
            if topic.type == "admin-dev"
              tr( class="row" )
                  - var tutorial_number = 0
                  each tuto in tutorials
                      if tuto.topic_name == topic.name
                          - tutorial_number = tutorial_number + 1

                  td( class="col-md-10" ) a( href= site.url + "/" + topic.name ) topic.title
                  td( class="col-md-2" ) tutorial_number
